/* 以上为测试导航栏效果代码 */

page{
    background-color: #ffffff;
}

.theme_container {
    background-color: #ffffff;
    height: 100%;
    width: 100%;
    /* position: fixed; */
    display: flex;
    flex-direction: column;
    justify-content: top;
    align-items: center;
}

.theme_top {
    margin-top: 30rpx;
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.theme_image_container{
    height: 100%;
    width: 38%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
}

.theme_image{
    height: 272rpx;
    width: 272rpx;
}

.theme_top_txt_container{
    height: 100%;
    width: 37%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.theme_top_txt_container_up{
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
}

.theme_top_txt_up{
    font-size: 48rpx;
    font-family: "mf";
    margin-bottom: 10rpx;
}

.theme_top_txt_container_down{
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
}

.theme_top_txt_down{
    font-size: 48rpx;
    font-family: "mf";
    margin-bottom: 50rpx;
}


.theme_top_icon_container{
    height: 100%;
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.theme_top_icon{
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-size: 220rpx;
    margin-bottom: 0rpx;

}

.colorset_container {
    width: 100%;
    height: 20%;
}

.color_container {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.color{
    height: 80rpx;
    width: 80rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.bottom_image_container {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-end;
}

.brush_bear{
    height: 200rpx;
    width: 180rpx;
    margin-right: 30rpx;
}

.colorset_container{
    width: 30%;
    height: 120rpx;
    margin-top: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.set_txt{
    font-family: "mf";
    font-size: 40rpx;
    color: #ffffff;
    letter-spacing: 3rpx;
}
