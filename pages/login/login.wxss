/* pages/login/login.wxss */

@import "/pages/botton/botton.wxss";

page{
  background-color: #f2f2f2f2;
}
.login_container {
  margin-right: 25rpx;
  margin-left: 25rpx;
  background-color: #f2f2f2f2;
  height: 1200rpx;
  width: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}
.first{
  width: 90%;
  height: 100rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 150rpx;
}
.second{
  width: 90%;
  height: 100rpx;
  background-color: white;
  margin-top: 80rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.plas{
  font-size: 32rpx;
  font-family: "mf";
  color: #cccccc;
}
.inputs{
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.714);
  font-family: "mf";
  width: 100%;

}
.login_butn{
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}
.login_text{
  font-family: "mf";
  font-size: 56rpx;
  color: white;
  display: flex;
}
.toregister{
  width: 100%;
  height: 80rpx;
  margin-left: 60rpx;
  margin-top: 50rpx;
  font-family: "mf";
  font-size: 25rpx;
  font-style: oblique;
  color: rgb(29, 27, 27);
  display: flex;
}
.decorate{
  width: 750rpx;
  height: 350rpx;
  margin-bottom: 0rpx;
}